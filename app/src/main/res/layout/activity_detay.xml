<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    android:layout_alignParentTop="true" >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mtmi.listview.DetayActivity">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:id="@+id/FilmResim"
        android:adjustViewBounds="false" />
        <TableLayout
            android:layout_below="@+id/FilmResim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_row="8"
            android:id="@+id/tableLayout">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="1"
                android:layout_column="1">
                <TextView
                    android:text="Film Adı  "
                    android:layout_height="30dp"
                    android:layout_width="80dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:id="@+id/FilmAd"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="2"
                android:layout_column="1">
                <TextView
                    android:text="Film Konusu  "
                    android:textStyle="bold"
                    android:layout_height="30dp"
                    android:layout_width="80dp"
                    />
                <TextView
                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:id="@+id/FilmKonusu"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="2"
                android:layout_column="1">
                <TextView
                    android:text="Film Süresi  "
                    android:textStyle="bold"
                    android:layout_height="30dp"
                    android:layout_width="80dp"
                    />
                <TextView
                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:id="@+id/FilmSuresi"
                    />
                </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="3"
                android:layout_column="1">
                <TextView
                    android:text="Gösterim Tarihi "
                    android:textStyle="bold"
                    android:layout_height="30dp"
                    android:layout_width="100dp"
                    />
                <TextView
                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:id="@+id/FilmGosterim"
                    />
                </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="3"
                android:layout_column="1">
                <TextView
                    android:text="Film Türü "
                    android:textStyle="bold"
                    android:layout_height="30dp"
                    android:layout_width="100dp"
                    />
                <TextView
                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:id="@+id/FilmTuru"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="3"
                android:layout_column="1"
                android:baselineAligned="false">
                <TextView
                    android:text="Yönetmen "
                    android:layout_height="30dp"
                    android:layout_width="100dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:id="@+id/Yonetmen"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="4"
                android:layout_column="1"
                android:baselineAligned="false">
                <TextView
                    android:text="Açıklama "
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:minHeight="50dp"
                    android:layout_width="fill_parent"
                    android:id="@+id/FilmAciklama"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"/>
            </TableRow>

        </TableLayout>



</RelativeLayout>
</ScrollView>